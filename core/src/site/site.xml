      <item name="E2E test development recomendations" href="https://github.com/CastInfo/robotest#e2e-tests-developement-recomendations" />
      <item name="Jenkins integration" href="https://github.com/CastInfo/robotest#jenkins-integration" />
    </menu>
    <menu name="Tools" inherit="bottom">
      <item name="Selenium" href="https://github.com/CastInfo/robotest#selenium" />
      <item name="RestAssured" href="https://github.com/CastInfo/robotest#api-rest-testing" />
      <item name="Tools Javadoc" href="https://github.com/CastInfo/robotest#browserstack" />
